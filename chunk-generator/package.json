{
  "name": "chunk-generator",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --minify --target=node20 --outfile=dist/index.js",
    "test-admonition": "ts-node test/admonition.ts",
    "generate": "ts-node src/index.ts --siv3d-docs-path ../siv3d.docs --siv3d-docs-language ja-jp --chunks-output-path chunks.json --code-blocks-output-path code-blocks.json"
  },
  "dependencies": {
    "@types/mdast": "^4.0.4",
    "mdast": "^3.0.0",
    "mdast-util-from-markdown": "^2.0.2",
    "mdast-util-to-markdown": "^2.1.2",
    "micromark-factory-space": "^2.0.1",
    "micromark-util-character": "^2.1.1",
    "micromark-util-symbol": "^2.0.1",
    "minimist": "^1.2.8",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.0.13",
    "esbuild": "^0.25.6",
    "jest-diff": "^30.0.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
